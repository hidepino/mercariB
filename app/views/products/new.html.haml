.single-container
  %header.single-header
    %h1
      = link_to root_path do
        = image_tag("logo.svg", alt:"mercari")

  .l-contener
    .signup-panel__inner
      = form_for(@product, url: sell_path, html: {method: :post}) do |f|

        .sell-contents
          %h2.l-single-head 商品の情報を入力
        / 画像投稿詩 ▼
        .sell-contents
          %h3.sell-form-title
            出品画像
            %span.form-require.sell 必須

          %p.sell-contents__comment 最大4枚までアップロードできます
          .sell-dropbox_container
            %ul.sell-dropbox-items
              %li.sell-dropbox-items_container
                .sell-dropbox-items-figure
                  = image_tag("250px-Red_Apple.jpg", alt:"仮",class: ".sell-dropbox-items-figure-")
                =link_to "" ,class: "sell-dropbox-items-btn" do
                  %p 編集
                =link_to "" ,class: "sell-dropbox-items-btn" do
                  %p 削除
            %ul.sell-dropbox-uploader
              %li.sell-dropbox-uploader_container
                .visible-pc
                  ドラッグアンドドロップ
                  %br またはクリックしてファイルをアップロード
                %i.fas.fa-camera 🐢
        / 商品名・説明 ▼
        .sell-contents
          .form-group
            = f.label :product_name do
              %h4.sell-form-sub_title
                商品名
                %span.form-require.sell 必須
              = f.text_field :product_name, placeholder: "商品名（必須40文字まで)",class: "sell-form-text_field"
          .form-group
            = f.label :product_info do
              %h4.sell-form-sub_title
                商品の説明
                %span.form-require.sell 必須
              = f.text_area :product_info, placeholder: "商品の説明（必須1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。",class: "sell-form-text_area"
        / 商品詳細 ▼
        .sell-contents
          %h3.sell-contents-label 商品の詳細
          .sell-form-box
            .form-group
              = f.label :category_id,class: "sell-form-select" do
                %h4.sell-form-sub_title
                  カテゴリー
                  %span.form-require.sell 必須
                .select-wrap
                  = f.select :category_id,["hoge1","fuga1"],prompt: "---"
                .select-wrap
                  = f.select :category_id,["hoge2","fuga2"],prompt: "---"
                .select-wrap
                  = f.select :category_id,["hoge3","fuga3"],prompt: "---"
                / = f.collection_select category_id:, product.category_id, :id, :name, class: "sell-form-select" モデル作成後使用
          .sell-form-box
            .form-group
              = f.label :size_id,class: "sell-form-select" do
                %h4.sell-form-sub_title
                  サイズ
                  %span.form-require.sell 必須
                .select-wrap
                  = f.select :size_id,["S","M","L","XL"], prompt: "---"
                  / = f.collection_select size_id:, product.size_id, :id, :name, prompt: "---", class: "sell-form-select" モデル作成後使用
          .sell-form-box
            =f.fields_for :brands do ||
              .form-group
                = f.label :brand_name do
                  %h4.sell-form-sub_title
                    ブランド
                    %span.form-arbitrary.sell 任意
                = f.text_field :brand_name, placeholder: "例）シャネル",class: "sell-form-text_field input_brand"
          .sell-form-box
            .form-group
              = f.label :product_state, class: "sell-form-select" do
                %h4.sell-form-sub_title
                  商品の状態
                  %span.form-require.sell 必須
                .select-wrap
                  = f.select :product_state,["よい","やべぇ"], prompt: "---"
                  / = f.collection_select product_state:, product.product_state, :id, prompt: "---", class: "sell-form-select"
        / 配送 ▼
        .sell-contents
          %h3.sell-contents-label
            配送について
            =link_to "" do
              ?
          .sell-form-box
            .form-group
              = f.label :delivery_fee_owner, class: "sell-form-select" do
                %h4.sell-form-sub_title
                  配送料の負担
                  %span.form-require.sell 必須
                .select-wrap
                  = f.select :delivery_fee_owner, ["おれ","おまえ"], prompt: "---"
                  / = f.collection_select delivery_fee_owner:, product.delivery_fee_owner, class: "sell-form-select", prompt: "---"
          .sell-form-box
            .form-group
              = f.label :area_id, class: "sell-form-select" do
                %h4.sell-form-sub_title
                  発送元の地域
                  %span.form-require.sell 必須
                .select-wrap
                  = f.select :area_id,["どこか","そこか"], prompt: "---"
                  / = f.collection_select area_id:, product.area_id, class: "sell-form-select", prompt: "---"
          .sell-form-box
            .form-group
              = f.label :delivery_date, class: "sell-form-select" do
                %h4.sell-form-sub_title
                  発送までの日数
                  %span.form-require.sell 必須
                .select-wrap
                  = f.select :delivery_date,["1日","2日"], prompt: "---"
                  / = f.collection_select delivery_date:, product.delivery_date, class: "sell-form-select", prompt: "---"
        / 金額 ▼
        .sell-contents
          %h3.sell-contents-label
            販売価格(300〜9,999,999)
            =link_to "" do
              ?
          .sell-form-box
            .form-group.sell-form-price
              = f.label :price_integer do
                .sell-form-price_left
                  .sell-form-sub_title-price
                    価格
                    %span.form-require.sell 必須
                .sell-form-price_right
                  %h5.sell-contents__comment
                    ¥
                    = f.number_field :price_integer, placeholder: "例）300",min:"300", max:"9999999",class: "sell-form-text_number"
            .sell-form-price-fee
              %p.sell-form-price-fee-text
                販売手数料 (10%)
              .sell-form-price-fee-num -
            .sell-form-price-gains
              %h3.sell-form-price-gains-text
                販売利益
              .sell-form-price-gains-num -

        .sell-contents
          %p.sell-contents__caution
            =link_to "",class: "text-blue" do
              禁止されている出品
            、
            =link_to "",class: "text-blue" do
              行為
            を必ずご確認ください。
            %br またブランド品でシリアルナンバー等がある場合はご記載ください。
            =link_to "",class: "text-blue" do
              偽ブランドの販売
            は犯罪であり処罰される可能性があります。
            %br また、出品をもちまして
            =link_to "",class: "text-blue" do
              加盟店規約
            に同意したことになります。
          .sell-contents__caution-space
          = f.submit "次へ進む", class: "btn btn__red"
          = link_to "/mypage" do
            %p.btn.btn__gray 戻る

  = render "devise/shared/footer"
