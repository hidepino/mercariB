= render 'home/header'
.bread-crumbs
  .bread-crumbs_box
    - breadcrumb :product
    = breadcrumbs separator: " &rsaquo; "

%section.product-box-container.clearfix
  %h1.product-name
    #{@product.name}
  .product-main-box
    .product-img-box
      .product-img-carousel.slider
        = image_tag @image.image, alt:"商品画像"
    %table.product-info
      %tbody
        %tr
          %th 出品者
          %td
            =link_to("#{@sell_user.nickname}", "/")
            %div
              .product-user-rate
                %i.good
                %p.count 222
              .product-user-rate
                %i.normal
                %p.count 111
              .product-user-rate
                %i.bad
                %p.count 22
        %tr
          %th カテゴリー
          %td
            =link_to do
              %p.parent #{@sell_product_category.parent.parent.name}
            =link_to "",class: 'child-box' do
              %i.right
              %p.child #{@sell_product_category.parent.name}
            =link_to "",class: 'child-box' do
              %i.right
              %p.g-child #{@sell_product_category.name}

        %tr
          %th ブランド
          %td
            =link_to do
              %p #{@sell_product_brand.name}
        %tr
          %th 商品の状態
          %td
            %p #{@product.status}
        %tr
          %th 配送料の負担
          %td
            %p #{@product.delivery_fee_owner}
        %tr
          %th 配送の方法
          %td
            %p #{@product.shipping_method}
        %tr
          %th 配送元地域
          %td
            =link_to do
              %p 兵庫県
        %tr
          %th 発送日の目安
          %td
            %p #{@product.delivery_date}
  .price-box
    %h1
      %span.price ¥ #{@product.price}
      %span.tax (税込)
      %span.tax-include 送料込み
  = link_to edit_product_path(@product) do
    .buy-btn 商品の編集
  %p.text-center or
  .calcel-btn 出品を一旦中止する
  = link_to "/products/#{@product.id}", method: :delete do
    .calcel-btn この商品を削除する

= render "product_comment"

= render "home/footer"
