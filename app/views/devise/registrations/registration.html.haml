%script{src:'https://www.google.com/recaptcha/api.js'}

.single-container
  %header.single-header
    %h1
      = link_to do
        = image_tag("logo.svg", alt:"mercari")

  %main.single-main
    .signup-panel
      %h2.signup-panel__head 会員情報入力
      = form_for "" do |f|
        .form-group
          = f.label :nickname, "ニックネーム"
          = f.text_field :nickname, autofocus: true, autocomplete: "email", placeholder: "例)メルカリ太郎"
        .form-group
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "PC・携帯どちらでも可"
        .form-group
          = f.label :password, "パスワード"
          = f.password_field :password, autocomplete: "new-password"
        .form-group
          = f.label :password_confirmation, "パスワード（確認）"
          = f.password_field :password_confirmation, autocomplete: "new-password"
        .form-group
          .g-recaptcha{data:{callback:"clearcall", sitekey:"ここにサイトキーをいれる"}}
        = f.submit "次へ進む", class: "btn btn__red"
  = render "devise/shared/footer"
