.single-container
  %header.single-header
    %h1
      = link_to do
        = image_tag("logo.svg", alt:"mercari")

  %main.single-main
    .signup-panel
      %h2.signup-panel__head 新規会員登録
      .signup-panel__inner
        %button.btn.btn__mail
          %i.far.fa-envelope
          メールアドレスで登録
        %button.btn.btn__sns.btn__sns--facebook
          %i.fab.fa-facebook-square
          Facebookで登録
        %button.btn.btn__sns.btn__sns--google
          %i.fab.fa-google-plus
          Googleで登録
  = render "devise/shared/footer"
