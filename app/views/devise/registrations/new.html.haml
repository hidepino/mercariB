.single-container
  %header.single-header
    %h1
      = link_to do
        = image_tag("logo.svg", alt:"mercari")
    %nav.signup-bar
      %ul.progress-bar
        %li
          会員情報
          %br
          .circle--first.circle--red
        %li
          電話番号認証
          %br
          .circle
        %li
          住所入力
          %br
          .circle
        %li
          支払い方法
          %br
          .circle
        %li
          完了
          %br
          .circle--last

  %main.single-main
    .signup-panel
      %h2.signup-panel__head 会員情報入力
      .signup-panel__inner
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          .form-group
            = f.label :nickname, "ニックネーム"
            %span.form-require 必須
            = f.text_field :nickname, autofocus: true, placeholder: "例)メルカリ太郎"
          .form-group
            = f.label :email, "メールアドレス"
            %span.form-require 必須
            = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "PC・携帯どちらでも可"
          .form-group
            = f.label :password, "パスワード"
            %span.form-require 必須
            = f.password_field :password, autocomplete: "new-password", placeholder: "6文字以上"
          .form-group
            = f.label :password_confirmation, "パスワード（確認）"
            %span.form-require 必須
            = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "6文字以上"
          .form-group
            = f.label [:first_name, :last_name], "お名前"
            %span.form-require 必須
            = f.text_field :first_name, placeholder: "例)山田"
            = f.text_field :last_name, placeholder: "例)彩"
          .form-group
            = f.label [:first_name_phonetic, :last_name_phonetic], "お名前カナ"
            %span.form-require 必須
            = f.text_field :first_name_phonetic, placeholder: "例)ヤマダ"
            = f.text_field :last_name_phonetic, placeholder: "例)アヤ"
          .form-group
            = f.label :telephone, "電話番号"
            = f.text_field :telephone, placeholder: "例)09012345678"
          .form-group
            = f.label [:birth_year, :birth_month, :birth_day], "生年月日"
            %span.form-require 必須
            %br
            = f.number_field :birth_year, min: "1900", max: "2018", class: "number_field"
            年
            %br
            = f.number_field :birth_month, min: "1", max: "12", class: "number_field"
            月
            %br
            = f.number_field :birth_day, min: "1", max: "31", class: "number_field"
            日
          .form-group
            = recaptcha_tags
          = f.submit "次へ進む", class: "btn btn__red"
  = render "devise/shared/footer"
