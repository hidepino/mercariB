%script{src:'https://www.google.com/recaptcha/api.js'}

.single-container
  %header.single-header
    %h1
      = link_to do
        = image_tag("logo.svg", alt:"mercari")

  %main.single-main
    .login-panel
      .login-no-account
        %p アカウントをお持ちでない方はこちら
        = link_to "" do
          %button.btn.btn__blue 新規会員登録
      .login-form-inner
        %button.btn.btn__sns.btn__sns--facebook
          %i.fab.fa-facebook-square
          Facebookでログイン
        %button.btn.btn__sns.btn__sns--google
          %i.fab.fa-google-plus
          Googleでログイン
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .form-group
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス"
        .form-group
          = f.password_field :password, autocomplete: "current-password", placeholder: "パスワード"
        .form-group
          .g-recaptcha{data:{callback:"clearcall", sitekey:"ここにサイトキーをいれる"}}
        = f.submit "ログイン", class: "btn btn__red"
      = link_to "パスワードをお忘れの方", new_password_path(resource_name)

  %footer.single-footer
    %nav
      %ul
        %li
          = link_to "プライバシーポリシー",""
        %li
          = link_to "メルカリ利用規約",""
        %li
          = link_to "特定商取引に関する表記",""
    = link_to "", class: "single-footer-logo" do
      = image_tag("logo-gray.svg", alt:"mercari", width:80, height:65)
    %p
      %small © 2018 Mercari
